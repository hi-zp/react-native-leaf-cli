{
  "name": "leaf-react-native-cli",
  "version": "0.1.0",
  "description": "",
  "main": "build/index.js",
  "files": [
    "build",
    "!build/*.d.ts",
    "!build/*.map"
  ],
  "bin": {
    "leaf-react-native": "build/index.js"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "rm -rf build && tsc --build",
    "format": "prettier --write \"**/*.ts{,x}\""
  },
  "engineStrict": true,
  "engines": {
    "node": ">=10"
  },
  "homepage": "https://gitee.com/hi-zp/leaf-react-native-cli",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "archiver": "^5.3.0",
    "chalk": "^4.1.1",
    "commander": "^8.1.0",
    "crypto": "^1.0.1",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/archiver": "^5.1.1",
    "@types/node": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "typescript": "4.2.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ],
      "react-hooks/exhaustive-deps": 0,
      "react-native/no-inline-styles": 0
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "build/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
